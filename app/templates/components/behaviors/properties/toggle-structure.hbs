{{#behaviors/properties/parameter-wrapper
  title=toggle.title
  removeButtonAction=removeButtonAction
  ignore=type.query
}}

  {{component 'behaviors/properties/parameter/boolean-field'
    class="flexed-input"
    value=toggleValue
  }}
{{/behaviors/properties/parameter-wrapper}}

{{#if toggleValue}}
  {{component 'behaviors/properties/toggle-item'
    node=node
    select="first"
    toggle=toggle
    class="flexed-input"
  }}
{{else}}
  {{component 'behaviors/properties/toggle-item'
    node=node
    select="last"
    toggle=toggle
    class="flexed-input"
  }}
{{/if}}
