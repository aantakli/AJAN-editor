  <div local-class="item-row-buttons">
    <button local-class="item-row-edit" class="ui yellow icon button rightmost" {{action "edit" "produces" activeGoal.produces.sparql}}>
      <i class="edit icon no-side-margins"></i>
    </button>
  </div>
