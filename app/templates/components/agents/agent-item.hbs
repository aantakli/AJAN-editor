<div local-class="agent-item-header clearfix">
  <div local-class="agent-item-header-text">{{activeAgent.label}}</div>
  <a class="ui icon button"
     download={{fileName}}
     href="{{content}}">
    <i class="download icon no-side-margins"></i>
  </a>
  <button {{action "deleteagent"}} class="ui red icon button rightmost">
    <i class="minus icon no-side-margins"></i>
  </button>
</div>

<div local-class="item-seperation">
  <hr><i> URI</i>
</div>

<div local-class="item-row clearfix">
  <div local-class="item-row-title" data-tooltip="Agent's URI" data-position="top left">
    URI:
  </div>

  <div local-class="item-row-content">
    <div local-class="item-row-value">
      {{activeAgent.uri}}
    </div>
    <div>
      <button data-tooltip="copy URI" class="ui right icon button" local-class="item-row-copy" {{action "clipboarCopy" activeAgent.uri}}>
        <i class="icon copy no-side-margins"></i>
      </button>
    </div>
  </div>
</div>

<!--  Label -->
<div local-class="item-seperation">
  <hr><i> Label</i>
</div>

<div local-class="item-row clearfix">
  <div local-class="item-row-title" data-tooltip="Manipulate Agent's Label" data-position="top left">Label:</div>

  {{#if this.editLabel}}
  <div local-class="item-row-content-edit">
    <div local-class="item-row-value">
      {{input value=activeAgent.label}}
    </div>

    <div local-class="item-row-buttons">

      <button local-class="item-row-cancel" class="ui negative right icon button" {{action "cancel"}}>
        <i class="close icon no-side-margins"></i>
      </button>

      <button local-class="item-row-apply" class="ui positive right icon button" {{action "save" activeAgent.uri "http://www.w3.org/2000/01/rdf-schema#label" activeAgent.label "http://www.w3.org/2001/XMLSchema#string"}}>
        <i class="pencil icon no-side-margins"></i>
      </button>

    </div>
  </div>
  {{/if}}

  {{#unless this.editLabel}}
  <div local-class="item-row-content ">
    <div local-class="item-row-value">
      {{activeAgent.label}}
    </div>
    <div local-class="item-row-buttons">
      <button local-class="item-row-edit" class="ui yellow icon button rightmost" {{action "edit" "label" activeAgent.label}}>
        <i class="edit icon no-side-margins"></i>
      </button>
    </div>
  </div>
  {{/unless}}

</div>

<!--Initial Behavior-->

<div local-class="item-seperation">
  <hr><i>Initial Behavior</i>
</div>

<div local-class="item-row clearfix">
  <div local-class="item-row-title">
    <div data-tooltip="Manipulate Agent's behaviors" data-position="top left">
      Initial Behavior:
    </div>
  </div>

  {{#if this.editInitialBehavior}}
  <div local-class="border-line">
    {{#ui-dropdown class="selection service-edit-dropdown" selected=availableBehaviors.initial.uri onChange=(action (mut selected))}}
    <div class="default text">{{activeAgent.initialBehavior.label}}</div>
    <i class="dropdown icon"></i>
    <div class="menu">
      {{#each availableBehaviors.initial as |item|}}
      <div data-value="{{item.uri}}" class="item">
        {{item.label}}
      </div>
      {{/each}}
    </div>
    {{/ui-dropdown}}

    <div local-class="buttonrow">
      <button local-class="item-row-apply" class="ui positive right icon button" {{action "savenewinitbehavior" selected}}>
        <i class="pencil icon no-side-margins"></i>
      </button>

      <button local-class="item-row-cancel" class="ui negative right icon button" {{action "cancel"}}>
        <i class="close icon no-side-margins"></i>
      </button>
    </div>
  </div>
  {{/if}}

  {{#unless this.editInitialBehavior}}
  <div local-class="item-row-content" local-class="block">
    {{#if (eq activeAgent.initialBehavior undefined)}}
    <div class="ajan-optional">you can select a Initial Behavior</div>
    {{/if}}
    <div local-class="item-row-value" local-class="bloc2">
      <div local-class="bloc3" data-tooltip={{activeAgent.initialBehavior.uri}} data-position="top left">
        {{activeAgent.initialBehavior.label}}
      </div>
    </div>

    <div local-class="item-row-buttons">
      <button local-class="item-row-edit" class="ui yellow icon button rightmost" {{action "edit" "initialBehavior"  activeAgent.initialBehavior}}>
        <i class="edit icon no-side-margins"></i>
      </button>
    </div>
  </div>
  {{/unless}}
</div>

